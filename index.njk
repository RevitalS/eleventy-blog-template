---
layout: layouts/base.njk
permalink: /
pagination:
  data: collections.posts
  size: 10
  reverse: true
  alias: posts
---
{% for post in posts %}
  <article class="zone box" dir="rtl">
    <a href="{{ post.url | url }}">
      <img src="{{ post.data.featuredImage | url }}" alt="{{ post.data.featuredImage }}" class="small-img"></img>
      <h1>
        <a href="{{ post.url | url }}">{{ post.data.title }}</a>
      </h1>
      <time datetime="{{ post.date | dateIso }}">{{ post.date | dateReadable }}</time>
      <br>
      <p>{{post.data.description}}</p>
      <br>
      <a href="{{ post.url | url }}"
        aria-label="Read more on {{ post.data.title }}">Read more</a>
  </a>
  </article>
{% endfor %}
